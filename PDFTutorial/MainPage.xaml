<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:PDFTutorial.Models"
             x:Class="PDFTutorial.MainPage"
             Title="PDF Generation Tutorial">
              

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="0, 5"/>
            </Style>
            <Style x:Key="HeaderLabel" TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#104A7B"/>
                <Setter Property="Margin" Value="0, 10, 0, 10"/>
            </Style>
            <Style x:Key="ValueLabel" TargetType="Label">
                <Setter Property="TextColor" Value="#333333"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Label Text="PDF Report Generator" Style="{StaticResource HeaderLabel}"
                   HorizontalOptions="Center"/>
            <Image x:Name="CarImage" HeightRequest="200" Aspect="AspectFit" Margin="0,0,0,10" />
            
            <Border Stroke="#F5F9FD" StrokeThickness="1" Background="#F5F9FD" StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Padding="20">
                    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto" 
                          ColumnDefinitions="Auto, *" RowSpacing="5" ColumnSpacing="15">
                        <Label Text="Vehicle Identification Number (VIN):"
                               Grid.Row="0" Grid.Column="0"/>
                        <Label x:Name="VinLabel" Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueLabel}"/>

                        <Label Text="Make:" Grid.Row="1" Grid.Column="0"/>
                        <Label x:Name="MakeLabel" Grid.Row="1" Grid.Column="1" Style="{StaticResource ValueLabel}"/>

                        <Label Text="Model:" Grid.Row="2" Grid.Column="0"/>
                        <Label x:Name="ModelLabel" Grid.Row="2" Grid.Column="1" Style="{StaticResource ValueLabel}"/>

                        <Label Text="Year" Grid.Row="3" Grid.Column="0"/>
                        <Label x:Name="YearLabel" Grid.Row="3" Grid.Column="1" Style="{StaticResource ValueLabel}"/>

                        <Label Text="Color:" Grid.Row="4" Grid.Column="0" />
                        <Label x:Name="ColorLabel" Grid.Row="4" Grid.Column="1" Style="{StaticResource ValueLabel}" />

                        <Label Text="Engine Size (L):" Grid.Row="5" Grid.Column="0" />
                        <Label x:Name="EngineLabel" Grid.Row="5" Grid.Column="1" Style="{StaticResource ValueLabel}" />

                        <Label Text="Horsepower (HP):" Grid.Row="6" Grid.Column="0" />
                        <Label x:Name="HpLabel" Grid.Row="6" Grid.Column="1" Style="{StaticResource ValueLabel}" />

                        <Label Text="Price (USD):" Grid.Row="7" Grid.Column="0" />
                        <Label x:Name="PriceLabel" Grid.Row="7" Grid.Column="1" Style="{StaticResource ValueLabel}" TextColor="#007BFF" />
                    </Grid>
                </VerticalStackLayout>
            </Border>
            <Button Text="Generate Car Report PDF"
                    Clicked="OnGeneratePDFClicked"
                    Margin="0, 20, 0, 0"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    FontSize="18"
                    FontAttributes="Bold"/>

            <ActivityIndicator x:Name="ActivitySpinner" IsRunning="False"/>

            <Label x:Name="StatusLabel" HorizontalOptions="Center" FontAttributes="Italic" TextColor="Green"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
